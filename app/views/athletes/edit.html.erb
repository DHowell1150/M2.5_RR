<h1> Update Athlete </h1>

<%= form_with url: "/athletes/#{@athlete}/edit", method: :patch do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :income %>

  <%= f.label :collegiate_athlete_yes, "Yes" %>
  <%= f.radio_button :collegiate_athlete, "true" %>
  <%= f.label :collegiate_athlete_no, "No" %>
  <%= f.radio_button :collegiate_athlete, "false" %>

  <%= f.submit "Update #{@athlete}"%>
<% end %>